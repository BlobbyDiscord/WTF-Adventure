{
  "name": "WTF-Adventure",
  "version": "1.0.6",
  "description": "A modern HTML5 multiplayer adventure!",
  "license": "wtfpl-2.0",
  "scripts": {
    "start": "webpack --mode=development",
    "wtfserver": "nodemon --exec babel-node src/server/js/main.js",
    "deploy": "webpack --mode=production --config webpack.production.config.js",
    "lint": "eslint ./src/**/**.js",
    "mysql-start": "mysql-ctl start",
    "wtf": "npm run mysql-start && npm start",
    "esdoc": "./node_modules/.bin/esdoc",
    "docs": "open ./docs/index.html",
    "test": "jest --env=jsdom --coverage && npm run badges",
    "badges": "make-coverage-badge"
  },
  "nodemonConfig": {
    "ignore": [
      "src/client/*",
      "assets/*",
      "build/*",
      "css/*"
    ],
    "delay": "2500"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "testEnvironment": "jsdom",
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/setupTests.js"
  },
  "dependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "bcrypt": "^3.0.3",
    "bootstrap": "^4.2.1",
    "commander": "^2.9.0",
    "connect": "^3.6.0",
    "http": "0.0.0",
    "jquery": "^3.3.1",
    "log": "^1.4.0",
    "memcache": "^0.3.0",
    "modernizr": "^3.7.0",
    "modernizr-webpack-plugin": "^1.0.7",
    "mysql": "^2.13.0",
    "popper.js": "^1.14.6",
    "request": "^2.81.0",
    "require": "^2.4.20",
    "sanitizer": "^0.1.3",
    "semver": "^5.6.0",
    "serve-static": "^1.13.2",
    "shutdown-hook": "^1.1.2",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "underscore": "^1.9.1",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/node": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.0-beta.6",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.26.3",
    "browser-sync-webpack-plugin": "^2.2.2",
    "canvas": "^2.2.0",
    "clean-webpack-plugin": "^1.0.1",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^2.1.0",
    "esdoc": "^1.1.0",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^5.11.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "file-loader": "^3.0.1",
    "fs": "0.0.1-security",
    "html-webpack-plugin": "^3.2.0",
    "imports-loader": "^0.8.0",
    "jest": "^23.6.0",
    "make-coverage-badge": "^1.0.1",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.9",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.5.0",
    "postcss-scss": "^2.0.0",
    "raw-loader": "^1.0.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.1.2",
    "yarn": "^1.12.3"
  }
}
